@model BillViewModel
@{
    ViewData["Title"] = "BillPay";
}

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="BillPost" method="Post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="From Account" class="control-label"></label>
                    @foreach(var account in Model.Customer.Accounts)
                    {
                    @Html.RadioButtonFor(m => m.selectedAccount, account.AccountNumber);
                    }
                    </div>

                    </form>
            </div>
        </div>
